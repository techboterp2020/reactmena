<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <template id="custom_barcode_label_print_new">
        <div class="page">
            <t t-call="techbot_barcode_customisation.product_barcode_custom_report">
            </t>
        </div>
    </template>

    <template id="product_barcode_custom_report">
        <t t-call="web.html_container">
            <div class="page">
                <t t-foreach="product_list" t-as="o">
                    <t t-foreach="range(0,count)" t-as="t">
                        <t t-foreach="range(0,o['qty_done'])" t-as="k">
                            <header>
                                <div style="height:0.3em;">
                                    <br/>
                                </div>
                            </header>
                            <table width="100%" height="15%">
                                <tr>
                                    <td  style="font-size:10px;" align="middle" width="50%">
                                        <span t-esc="o['company_name']"/>
                                    </td>
                                    <td style="width=50%">
                                        <t t-foreach="docs.get_company_data().values()" t-as="company_data">
                                        <img t-if="company_data.barcode_logo" t-att-src="image_data_uri(company_data.barcode_logo)"
                                             style="width: 60px;height: 50px;" alt="Logo"/>
                                        </t>
                                    </td>
                                    <td align="center" style="font-size:10px;" width="50%">
                                        <span t-esc="o['telephone']"/>
                                    </td>
                                </tr>
                            </table>
                            <table width="100%" height="65% ">
                                <tbody>
                                    <tr>
                                        <td class="text-center align-middle">
                                            <span>
                                                <div t-esc="o['barcode']"
                                                     t-options="{'widget': 'barcode', 'width': 900, 'height': 200   , 'img_style': 'width:100%;height:30%;'}"/>
                                            </span>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td style="font-size:12px; text-align:center;">
                                            <span t-esc="o['display_name']"/>
                                        </td>
                                    </tr>
                                </tbody>
                            </table>
                        </t>
                    </t>
                </t>
            </div>
            <p style="page-break-before:always;"></p>
        </t>
    </template>


</odoo>